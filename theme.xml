<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>vertical</type>
        <pos>-0.26 0.0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.27 0.27</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
		<logoAlignment>center</logoAlignment> 
         <zIndex>10</zIndex>			
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>                 
         <path>./_inc/images/mainbottom.png</path>
      </image> 	
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>7</zIndex>                 
         <path>./_inc/images/maintop.png</path>
      </image> 	  
      <text name="systemInfo">     
         <pos>0.11 0.906</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/BADABB__.TTF</fontPath>
	     <fontSize>0.028</fontSize>
         <zIndex>11</zIndex>
         <alignment>center</alignment> 	     
      </text>            
   </view>
</feature>


